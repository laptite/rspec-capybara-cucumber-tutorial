= simple_form_for achievement do |f|
  = f.input :title
  = f.input :description
  = f.input :privacy, collection: Hash[Achievement.privacies_collection]
  = f.input :featured, label: 'Featured achievement'
  = f.input :cover_image, as: :file
  = f.submit 'Create Achievement', class: 'btn btn-primary'

  - unless f.object.new_record?
    = link_to 'Delete', achievement_path(achievement), method: :delete, data: { confirm: 'Are you sure you want to delete this achievement?'}, class: 'btn btn-danger'